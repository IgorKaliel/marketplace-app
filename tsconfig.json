{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "allowArbitraryExtensions": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "ignoreDeprecations": "6.0",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["nativewind/types"]
  },
  "include": [
    "src/**/*",
    "**/*.ts",
    "**/*.tsx",
    "nativewind-env.d.ts",
    "src/types/**/*"
  ]
}
